<!DOCTYPE html>
<html lang="en">
    
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Landing Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="/style.css" rel="stylesheet">
</head>
<body>
    <div>
        <% userArr.forEach(user =>{%>
            <% if(user.isPromoted === null){ %>
                <div class="user-container isPromoted-null">
                    <h4><%= user.name%></h4>
                    <h4><%= user.email%></h4>

            <% }else if(user.isPromoted === false){ %>
                <div class="user-container isPromoted-false">
                    <h4><%= user.name%></h4>
                    <h4><%= user.email%></h4>

            <%}else{%>
                <div class="user-container isPromoted-true">
                    <h4><%= user.name%></h4>
                    <h4><%= user.email%></h4>

            <%}%>
            <form method="POST" action="/users/<%= user._id %>?_method=PUT">
                <button class="btn btn-success" id="edit-<%= user.name %>" type="submit">Promote / Demote</button>
            </form>
            <form method="POST" action="/users/<%= user._id %>?_method=DELETE">
                <button class="btn btn-danger" id="delete-<%= user.name %>">Delete</button>
            </form> 
        </div>
            
        <%})%>
    </div>

    <div class="center1">
        <button class="btn btn-primary center1" onclick=" window.location.href='/form' ">Add User</button>
    </div>
    
    

    <!-- <script type="text/javascript">
        document.getElementById("go-to-form").onclick = function () {
            window.location.href("/form");
        };
    </script> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>
</html>